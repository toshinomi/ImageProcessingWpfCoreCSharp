<Window x:Class="ImageProcessingWpfCoreCSharp.HistgramLiveCharts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessingWpfCoreCSharp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Histgram" Height="450" Width="800"
        Closing="OnClosingWindow" FontSize="15.75">
    <Grid Background="LightSteelBlue">
        <lvc:CartesianChart Series="{Binding seriesCollection}" Margin="10,10,10,10"/>
    </Grid>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Save Csv..." Click="OnClickMenu"/>
        </ContextMenu>
    </Window.ContextMenu>
</Window>
